<head>
	<link rel="stylesheet" href="/styles/styles.css">
</head>
<link rel="stylesheet" href="/styles.css">
<h1><%= title %></h1>
<% if (type === 'suppliers') { %>
  <% data.forEach(supplier => { %>
    <div>
      <a href="/item?title=<%= title %>&type=<%= type %>&id=<%= supplier.id %>">
        <p><%= supplier.name %></p>
      </a>
    </div>
  <% }) %>

<% } else if (type === 'products') { %>
  <% data.forEach(product => { %>
    <div>
      <a href="/item?title=<%= title %>&type=<%= type %>&id=<%= product.id %>">
        <p><%= product.name %></p>
      </a>
    </div>
  <% }) %>

<% } else if (type === 'restocks') { %>
  <% data.forEach(r => { %>
    <div>
    <% const formattedDate = new Date(r.date).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      hour12: true   
    }) %>
      <a href="/item?title=<%= title %>&type=<%= type %>&id=<%= r.id %>">
        <p><%= formattedDate %></p>
      </a>
    </div>
  <% }) %>

<% } else if (type === 'sales') { %>
  <% data.forEach(sale => { %>
    <div>
    <% const formattedDate = new Date(sale.date).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      hour12: true   
    }) %>  
      <a href="/item?title=<%= title %>&type=<%= type %>&id=<%= sale.id %>">
        <p><%= formattedDate %></p>
      </a>
    </div>
  <% }) %>
<% } %>
<br><br>
<%- include('home')%>
